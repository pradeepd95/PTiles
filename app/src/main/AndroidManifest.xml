<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.p_r_tiles.prtiles">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="in.p_r_tiles.prtiles.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="in.p_r_tiles.prtiles.ProductDetailsActivity" />
        <activity
            android:name="in.p_r_tiles.prtiles.FilterActivity"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name="in.p_r_tiles.prtiles.SearchActivity"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity android:name="in.p_r_tiles.prtiles.BuyNowActivity" />
        <activity android:name="in.p_r_tiles.prtiles.MyOrderActivity" />
        <activity android:name="in.p_r_tiles.prtiles.TrackOrder"></activity>
    </application>

</manifest>